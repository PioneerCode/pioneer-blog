@model List<Post>
<section class="home-greatest-posts">
    <h3 class="header-surround-bar"><span>Popular Posts</span></h3>
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                @foreach (var post in Model.Take(3))
                {
                    <a class="clearfix home-greatest-posts-card" href="/post/@post.Url" title="@post.Title">
                        <div class="home-greatest-posts-card-image float-left" style="background-image: url('blogs/@post.Url/@post.IconImage')"></div>
                        <h4>@post.Title</h4>
                    </a>
                }
            </div>
            <div class="col-lg-6">
                @foreach (var post in Model.Skip(3))
                {
                    <a class="clearfix home-greatest-posts-card" href="/post/@post.Url" title="@post.Title">
                        <div class="home-greatest-posts-card-image float-left" style="background-image: url('blogs/@post.Url/@post.IconImage')"></div>
                        <h4>@post.Title</h4>
                    </a>
                }
                <a class="home-greatest-posts-more" href="/blog" title="Blog Posts"><i class="fa fa-hand-o-right">&nbsp;</i>Read More This Way </a>
            </div>
        </div>
    </div>
</section>