@using System.Linq
@using Microsoft.AspNetCore.Mvc.Rendering
@model List<Post>
<section class="pt-5 pb-5">
    <h3 class="surround-bar text-center mb-4"><span>Latest Posts</span></h3>
    <div class="container-fluid">
        <div class="row">
            @foreach (var post in Model.Take(4))
            {
                <div class="col-lg-3 col-md-6 end">
                    @await Html.PartialAsync("_HomePostCard", post)
                </div>
            }
        </div>
        <div class="row">
            @foreach (var post in Model.Skip(4))
            {
                <div class="col-lg-3 col-md-6 end">
                    @await Html.PartialAsync("_HomePostCard", post)
                </div>
            }
        </div>
    </div>
</section>