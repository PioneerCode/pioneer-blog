@model Pioneer.Blog.Model.Views.SignUpViewModel
<section class="home-sign-up" id="home-sign-up">
  <!-- TODO: Keep an eye on this.  We are adding these hear so our UnCss build takes account of them. -->
  <ul style="display: none"><li></li></ul>
  <div class="row">
    <div class="large-10 large-push-1 columns">
      <h4><span>Get Top Notch Bits Sent Straight To Your Inbox!</span></h4>
      <p>Stay up to date on all the happenings at Pioneer Code, receive exclusive offers and be the first to hear about new content.</p>
      <form asp-controller="Home" asp-action="SignUp" method="post" data-abide novalidate>
        <div data-abide-error class="alert callout" style="display: none;">
          <p>
            <i class="fa fa-alert"></i>Yo, you need to supply a valid email-address.
          </p>
        </div>
        @if (ViewBag.IsValid != null && !ViewBag.IsValid)
        {
          if (ViewBag.IsValidMessage != null)
          {
                <div class="callout alert">
                  <p>
                    @ViewBag.IsValidMessage
                  </p>
                </div>
          }
          else
          {
                <div class="callout alert">
                  <div asp-validation-summary="All"></div>
                </div>
          }
        }
        @if (ViewBag.IsValid != null && ViewBag.IsValid)
        {
            <div class="callout success">
              <p>Thanks for signing up!</p>
            </div>
        }
        <div>
          <div class="input-group">
            <input asp-for="Email" placeholder="Your email address..." pattern="email" required class="input-group-field" />
            <div class="input-group-button">
              <button type="submit" class="button">
                <i class="fa fa-envelope-o"></i>&nbsp;SEND
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>