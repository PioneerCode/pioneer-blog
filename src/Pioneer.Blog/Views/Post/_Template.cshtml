@{
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}

@section metaPage
{
  <meta property="og:type" content="article">
  <meta property="og:image" content="@(AppConfiguration.Value.SiteUrl + Model[(int)PreviousCurrentNextPosition.Current].SmallImage)">
  <meta property="article:section" content="@Model[(int)PreviousCurrentNextPosition.Current].Category.Name">
  <meta property="article:published_time" content="@Model[(int)PreviousCurrentNextPosition.Current].PostedOn">
  <meta property="article:modified_time" content="@Model[(int)PreviousCurrentNextPosition.Current].ModifiedOn">
  <meta property="og:updated_time" content="@Model[(int)PreviousCurrentNextPosition.Current].ModifiedOn">
  <meta itemprop="image" content="@(AppConfiguration.Value.SiteUrl + Model[(int)PreviousCurrentNextPosition.Current].SmallImage)">
}

@RenderBody()
